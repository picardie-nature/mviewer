    		<layer id='temporal_atlas' name="Atlas chiroptères" url="https://www.geo2france.fr/geoserver/picardie_nature/ows" infoformat="application/vnd.ogc.gml"  queryable="true" opacity="0.9"
                timefilter="true" timeinterval="year" timecontrol="slider" expanded="true" legendurl="img/legend/temporal_atlas.png" timevalues="2010,2011,2012,2013,2014,2015,2016,2017,2018,2019,2020" 
                filter="id_atlas=2" >
