                timefilter="true" timeinterval="year" timecontrol="slider" expanded="true" timevalues="2009,2010,2011,2012,2013,2014,2015,2016,2017,2018,2019" 
                filter="id_atlas=9" >
                <template   url="templates/temporal_atlas_generic.mst" />
  	        </layer>

